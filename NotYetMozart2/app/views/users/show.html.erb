<p id="notice"><%= notice %></p>

<p>
  <h2><%= @user.name %></h2>
</p>

<p>
  <% if can? :view_role, User %>
        <b>Role:</b>
         <%= @user.role %>
  <% end %>
</p>


<p>
  <% if can? :view_email, User %>
      <b>Email:</b>
        <%= @user.email %>
  <% end %>
</p>

<p>
  <b>Rocking NYM since:</b>
  <%= @user.created_at.strftime('%B:%Y') %>
</p>

<p>
 <%= image_tag @user.background_image.detail.url %>
</p>

<p>
 <%= image_tag @user.user_image.detail.url %>
</p>


<h1></h1>
<br>
<br>
<br>
<br>
