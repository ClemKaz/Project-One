<table>


<% @user.songs.each do |song| %>
  <tr>
    <td><%=link_to song.name, song_path(song) %></td>
    <td>
      <audio controls>
      <source src=<%= song.song_file.url %> type="audio/mpeg">
      </audio>
    </td>
    <% end %>
  </tr>
</table>
